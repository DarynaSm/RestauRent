@model TrainingASP.Models.RestaurantDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <div>
            @Html.DisplayFor(modelItem => Model.OpeningTime) - @Html.DisplayFor(modelItem => Model.ClosingTime)
        </div>
    </dl>
    @if (Model.Tables != null)
    {
    @foreach (var item in Model.Tables)
    {
<div>
    <div>
        @Html.DisplayFor(modelItem => item.Number)
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.CustomerCount)
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.Price)
    </div>
    @foreach (var i in item.Time)
    {
<div>
    <div>
        @Html.DisplayFor(modelItem => i.StartTime) - @Html.DisplayFor(modelItem => i.FinishTime)
    </div>
</div>}
</div>}
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
